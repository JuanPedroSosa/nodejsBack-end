doctype html
html
	head
		title Tareas
	body
		h1=tarea.description
		p=tarea.createdAt
		p
			strong autor:
			span=tarea.user.email
			ul
				each category in tarea.categories
				li=category.title

		form(action=`/tasks/${tareas.id}?_method=DELETE` method="POST")
			input(type="submit" value="eliminar")